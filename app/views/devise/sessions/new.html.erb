<div class ="container  mt-lg">
  <h2 class="main-title">Вход</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mt-md">
      <%= f.label :email, class: 'title-md' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field mt-md">
      <%= f.label :password, class: 'title-md'%><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-md">
        <%= f.check_box :remember_me%>
        <%= f.label :remember_me, "Запомнить меня" %>
      </div>
    <% end %>

    <div class="mt-md">
      <%= f.submit "Войти", class: "button button-main" %>
    </div>
  <% end %>

  <div class="mt-sm">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Зарегистрироваться", new_registration_path(resource_name), class: "right-sp button button-main" %><br />
    <% end %>
  </div>
</div>