<%= form_tag(posts_path, method: "get") do %>
  <%= select_tag :filter, options_for_select(['Все посты', 'Мои посты']), prompt: 'Фильтр постов',onchange: "this.form.submit()" %>
<% end %>
<style> .filter-form { display: flex; align-items: flex-start; justify-content: flex-end}
select { margin-right: 10px;margin-top: 1rem }
select, input[type="submit"] { font-size: 16px; padding: 5px 10px; border-radius: 5px;}
input[type="submit"] { background-color: #5D9CEC; color: #fff; cursor: pointer; display: block; } </style>

<% @posts.each do |post| %>
  <div class="container mt-md">
    <%= link_to post.title, post,class: "text-blue title-md mt-sm mb-sm" %>
    <p class="mt-md"><%= post.description %></p>
  </div>
<% end %>
<br>
<%= link_to 'Создать статью', new_post_path, class: "button button-main"%>
<div class="mt-lg middle-sp">
  <%= will_paginate @posts%>
</div>